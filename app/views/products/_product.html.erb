<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <%if product.quantity == 0 %>
      <div class="price"> 
      <button type="button" class="btn btn-danger" id ="sold-out">Sold Out</button>       
        <div>
    <%= button_to add_item_cart_path(product_id: product.id), :disabled => true, class: 'btn', id: 'add-to-cart' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
      <%end%>
</div>
            <%else%>
  <div>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', id: 'add-to-cart' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
<%end%>
    <%end%>
  </div>
</article>
