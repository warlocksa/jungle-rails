<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div class="price"> 
  <%if product.soldout? %>

        <button type="button" class="btn btn-danger soldout" >Sold Out</button>       

    <%= button_to add_item_cart_path(product_id: product.id), :disabled => true, class: 'btn  add-to-cart' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 

      <%end%>

            <%else%>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn add-to-cart' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <%end%>

    <%end%>
      </div>
</article>
